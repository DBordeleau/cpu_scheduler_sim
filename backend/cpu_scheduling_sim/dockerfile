# ---- 1. Build stage ----
FROM maven:3.9.6-eclipse-temurin-21 AS builder
WORKDIR /app

COPY pom.xml .
RUN mvn dependency:go-offline

COPY src ./src
RUN mvn clean package -DskipTests

# ---- 2. Runtime stage ----
FROM eclipse-temurin:21-jre AS runtime
WORKDIR /app

COPY --from=builder /app/target/cpu_scheduling_sim-1.0-SNAPSHOT.jar .

# Start app on Fly's assigned port
ENV PORT=8080
ENTRYPOINT ["sh", "-c", "java -jar cpu_scheduling_sim-1.0-SNAPSHOT.jar"]